<Window x:Class="HowMuchLonger.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings - How Much Longer" Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#f5f5f5">

    <Window.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,15,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Work Hours Section -->
                <TextBlock Text="Work Hours" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Start Time -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Time:" Style="{StaticResource LabelStyle}" Margin="0,10,20,10"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                        <TextBox Text="{Binding StartHour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        <TextBlock Text=":" FontSize="20" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding StartMinute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        <TextBlock Text="(24-hour format)" FontSize="12" Foreground="#7f8c8d" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- End Time -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="End Time:" Style="{StaticResource LabelStyle}" Margin="0,10,20,10"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                        <TextBox Text="{Binding EndHour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        <TextBlock Text=":" FontSize="20" FontWeight="Bold" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding EndMinute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource TextBoxStyle}"/>
                        <TextBlock Text="(24-hour format)" FontSize="12" Foreground="#7f8c8d" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- Notifications Section -->
                <TextBlock Text="Notifications" Style="{StaticResource SectionHeaderStyle}"/>

                <CheckBox Content="Enable hourly notifications"
                          IsChecked="{Binding EnableHourlyNotifications, Mode=TwoWay}"
                          Style="{StaticResource CheckBoxStyle}"/>

                <CheckBox Content="Enable milestone notifications (halfway, 1hr, 15min)"
                          IsChecked="{Binding EnableMilestoneNotifications, Mode=TwoWay}"
                          Style="{StaticResource CheckBoxStyle}"/>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" Style="{StaticResource SectionHeaderStyle}"/>

                <CheckBox Content="Minimize to tray when closing window"
                          IsChecked="{Binding MinimizeToTrayOnClose, Mode=TwoWay}"
                          Style="{StaticResource CheckBoxStyle}"/>

                <!-- Info Section -->
                <Border Background="#ecf0f1"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Tips" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#7f8c8d">
                            • Use 24-hour format for times (e.g., 17 = 5:00 PM)
                            <LineBreak/>
                            • Hourly notifications show at the top of each hour
                            <LineBreak/>
                            • Milestone notifications appear at key moments
                            <LineBreak/>
                            • Double-click the system tray icon to restore the window
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Click="Save_Click"
                    Style="{StaticResource ButtonStyle}"/>
            <Button Content="Cancel"
                    Click="Cancel_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
                        <Setter Property="Background" Value="#95a5a6"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7f8c8d"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
